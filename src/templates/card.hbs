{{#each this}}
  <li class='js-movie__item grid-item'>

    <img
      class='js-movie__image'
      loading='lazy'
      src='https://image.tmdb.org/t/p/original/{{poster_path}}'
      alt={{title}}
      data-id={{id}}
    />

    <h2 class='js-movie__title grid-title' data-id={{id}}>{{original_title}}</h2>

    <p class='js-movie__genre grid-year'>{{genre_ids}}{{#unless @last}}{{/unless}} | {{release_date}}</p>

  </li>
{{/each}}